<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <title><%= course.title %></title>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4"><%= course.title %></h1>
        <p class="lead mb-4"><%= course.description %></p>
        <img src="<%= course.image_url %>" class="img-fluid mb-4" alt="<%= course.title %>">
        <h2 class="mb-4">Videos</h2>
        <div class="row">
            <% videos.forEach(video => { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h3 class="card-title"><%= video.title %></h3>
                            <div class="video-container">
                                <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= video.video_url %>" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        <a href="/" class="btn btn-secondary mt-4">Back to Home</a>
    </div>
</body>
</html>